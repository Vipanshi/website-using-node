head
     link(rel='stylesheet', href='https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css')
body
    block content
    
             h1(align='center') Sign Up

             if(msg1)
                 .alert.alert-danger(align='center') 
                     strong #{msg1}
        
                     
             
             
             if(errors)
                 each error in errors
                      .alert.alert-danger(align='center') #{error.msg}  

            


             // register form
             form(method='POST' action='/register')
                 div.form-group
                     label(for='name') Name:
                     input#name.form-control(type='text', placeholder='first and last' name='name')
                 div.form-group
                     label(for='email') Email:
                     input#email.form-control(type='email', placeholder='name@email.com' name='email')
         
                 div.form-group
                     label(for='password') Password:
                     input#password.form-control(type='password' name='password')
                 div.form-group
                      label Confirm Password
                      input.form-control(type='password', placeholder='Password', name='password2')
                 button.btn.btn-primary(type='submit') Sign up